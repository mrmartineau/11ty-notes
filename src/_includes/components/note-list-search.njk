<div>
  {% for note in searchResults %}
  <a href="{{ note.url | url }}" class="noteListItem">
    <h3 class="flex gap-3 items-center">
      {% if note.emoji %}<span>{{ note.emoji }}</span
      >{% endif %}
      {{ note.title }}
    </h3>
    <div class="flex gap-2 items-center">
      {% if note.tags.length %}
      <div class="noteListItem__tags">
        {% for tag in note.tags %} {% tagDisplay tag %} {% endfor %}
      </div>
      {% endif %}
      <div class="noteListItem__date">
        {{ note.date | dateFromISO | readableDate | log }}
      </div>
    </div>
  </a>
  {% endfor %}
</div>
