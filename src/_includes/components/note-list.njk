<div>
  {% for note in notes | reverse %}
  <a href="{{ note.url | url }}" class="noteListItem">
    <h3 class="flex gap-2 items-center">
      {{ note.data.emoji }}
      {{ note.data.title }}
    </h3>
    <div class="flex gap-2 items-center">
      {% if note.data.tags.length %}
      <div class="noteListItem__tags">
        {% for tag in note.data.tags %} {% tagDisplay tag %} {% endfor %}
      </div>
      {% endif %}
      <div class="noteListItem__date">
        {{ note.date | readableDate }}
      </div>
    </div>
  </a>
  {% endfor %}
</div>
